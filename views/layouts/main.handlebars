<html lang='en'>

  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Run Your League</title>
    <link
      href='https://fonts.googleapis.com/css?family=IBM+Plex+Sans:400,400i,700&display=swap'
      rel='stylesheet'
    />

    <link rel='stylesheet' href='/css/style.css' />
  </head>

  <body class='flex-column min-100-vh'>
    <nav class='navbar'>
      <ul class='flex-row'>
        <li class='li-inline nav-item'><a href='/'>League</a></li>
        <li class='li-inline nav-item'><a href='/match'>Matches</a></li>
        <li class='li-inline nav-item'><a href='/match/new'> New Match</a></li>
        <li class='li-inline nav-item'><a href='/team/new'>New Team</a></li>

        {{#if loggedIn}}
          <li class='li-inline nav-item'><a href='#' id='logout'>Logout</a></li>
        {{else}}
          <li class='li-inline nav-item'><a href='/login'>Login</a></li>
        {{/if}}
      </ul>
    </nav>
    <header class='hero'>
      {{#if match}}
        <h1 class='app-title'><a href='/match'>Match Tracker</a></h1>
      {{else}}
        <h1 class='app-title'><a href='/'>The League Tracker</a></h1>
      {{/if}}
    </header>

    <main class='col-auto'>
      {{{body}}}
    </main>

    <footer>
      &copy; Mike DeDomenic
    </footer>

    {{#if loggedIn}}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>

</html>